macro index <F2> <change-folder>~/yvon@cognard.com/INBOX<enter>
macro index <F3> <change-folder>~/yvon.cognard@quelleenergie.fr/INBOX<enter>
macro index <F4> <change-folder>~/ycognard@tbcast.com/INBOX<enter>
folder-hook 'yvon@cognard.com' 'source ~/.mutt/yvon@cognard.com'
folder-hook 'yvon.cognard@quelleenergie.fr' 'source ~/.mutt/yvon.cognard@quelleenergie.fr'
folder-hook 'ycognard@tbcast.com' 'source ~/.mutt/ycognard@tbcast.com'

source ~/.mutt/yvon@cognard.com

set alias_file= ~/.mutt/aliases
source $alias_file

set use_from=yes
set use_envelope_from=yes
set realname='Yvon Cognard'
set sendmail="/usr/bin/msmtp"
set text_flowed=yes
set ssl_starttls=no
set header_cache="~/.hcache"
set sort_alias=alias
set reverse_alias=yes
set sort=threads
set sort_aux=last-date-received
set delete=yes
set confirmappend=no
set include=yes
set markers=no

color index     color190 default "~F"
color index     color160 default "~N"
color index     color160 default "~O"
color status    white color88
color indicator black color15

macro pager \cb <pipe-entry>'urlview'<enter> 'Follow links with urlview'
